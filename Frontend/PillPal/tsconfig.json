{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,              // enable strict type checking
    "allowJs": true,             // allow JavaScript files
    "jsx": "react-jsx",          // use React 17+ JSX transform
    "noEmit": true,              // don't output compiled files
    "baseUrl": ".",              // base path for module resolution
    "paths": {
      "@/*": ["./*"]             // alias for imports
    }
  },
  "include": [
    "src/**/*",                  // all TS/JS files in src
    "app/**/*",                  // all TS/JS files in app
    ".expo/types/**/*.ts",       // Expo types
    "expo-env.d.ts"              // environment declarations
  ],
  "exclude": [
    "node_modules",              // donâ€™t check dependencies
    "babel.config.js",
    "metro.config.js"
  ]
}